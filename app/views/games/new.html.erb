<h1>Here are your letters!</h1>

<ul id="container-letters">
  <% @letters.each do |letter| %>
  <li class="letter">
    <%= letter %>
  </li>
  <% end %>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="Your word here">
  <input type="submit">
</form>
